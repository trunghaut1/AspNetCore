@model Product
@{
    ViewData["Title"] = "Sản phẩm";
    IEnumerable<Product> relPro = (IEnumerable<Product>)ViewBag.RelatedPro;
}
@Html.Partial("Header", "Sản phẩm")

<!-- BEGIN: CONTENT/SHOPS/SHOP-PRODUCT-DETAILS-2 -->
<div class="c-content-box c-size-lg c-overflow-hide c-bg-white">
    <div class="container">
        <div class="c-shop-product-details-2">
            <div class="row">
                <div class="col-md-6">
                    <div class="c-product-gallery">
                        <div class="c-product-gallery-content">
                            <div class="c-zoom">
                                <img src="@Model.Image">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="c-product-meta">
                        <div class="c-content-title-1">
                            <h3 class="c-font-uppercase c-font-bold">@Model.Name</h3>
                            <div class="c-line-left"></div>
                        </div>
                        <div class="c-product-badge">
                            <div class="c-product-sale">Sale</div>
                            <div class="c-product-new">Mới</div>
                        </div>
                        <div class="c-product-review">
                            <div class="c-product-rating">
                                <i class="fa fa-star c-font-red"></i>
                                <i class="fa fa-star c-font-red"></i>
                                <i class="fa fa-star c-font-red"></i>
                                <i class="fa fa-star c-font-red"></i>
                                <i class="fa fa-star-half-o c-font-red"></i>
                            </div>
                            <div class="c-product-write-review">
                                <a class="c-font-red" href="#">Viết đánh giá</a>
                            </div>
                        </div>
                        <div class="c-product-price">@string.Format("{0:C}", Model.Price)</div>
                        <div class="c-product-short-desc"> @Model.Describe </div>
                        <div class="c-product-add-cart c-margin-t-20">
                            <div class="row">
                                <div class="col-sm-5 col-xs-12">
                                    <div class="c-input-group c-spinner">
                                        <p class="c-product-meta-label c-product-margin-2 c-font-uppercase c-font-bold">Số lượng:</p>
                                        <input type="text" id="cartQuantity" class="form-control c-item-1" value="1" min="1">
                                        <div class="c-input-group-btn-vertical">
                                            <button class="btn btn-default" type="button" data_input="c-item-1">
                                                <i class="fa fa-caret-up"></i>
                                            </button>
                                            <button class="btn btn-default" type="button" data_input="c-item-1">
                                                <i class="fa fa-caret-down"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-xs-12 c-margin-t-20">
                                    @if (Model.Quantity > 0)
                                    {
                                        <button onclick="AddToCart(@Model.Id,$('#cartQuantity').val())" class="btn c-btn btn-lg c-font-bold c-font-white c-theme-btn c-btn-square c-font-uppercase">Thêm vào giỏ</button>
                                    }
                                    else
                                    {
                                        <button class="btn c-btn btn-lg c-font-bold c-font-white c-theme-btn c-btn-square c-font-uppercase">Hết hàng</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: CONTENT/SHOPS/SHOP-PRODUCT-DETAILS-2 -->
<div class="c-content-box c-size-md c-no-padding">
    <div class="c-shop-product-tab-1" role="tabpanel">
        <div class="container">
            <ul class="nav nav-justified" role="tablist">
                <li role="presentation" class="active">
                    <a class="c-font-uppercase c-font-bold" href="#tab-1" role="tab" data-toggle="tab">Mô tả</a>
                </li>
            </ul>
        </div>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="tab-1">
                <div class="container">
                    @Model.Describe
                </div>
            </div>
        </div>
    </div>
</div>

<div class="c-content-box c-size-md c-bg-parallax" style="background-image: url(/img/content/shop-backgrounds/127.jpg)">
    <div class="container">
        <div class="c-content-title-1">
            <h3 class="c-center c-font-uppercase c-font-bold c-font-white">Sản phẩm liên quan</h3>
            <div class="c-line-center c-theme-bg"></div>
        </div>
        @Html.Partial("ProductListPartial", relPro)
    </div>
</div>
@section scripts {
<script src="~/plugins/zoom-master/jquery.zoom.min.js" type="text/javascript"></script>
}